@model PersonalDiaryApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>


<hr />
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form asp-action="Login" method="post" id="loginForm">
            <div class="input-group mb-3">
                <input asp-for="Username" type="email" placeholder="Username" class="form-control" />

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>

            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>

            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="row">
                <div class="col-8">
                    <span class="text-danger">@Model.Error</span>
                    @*<div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>*@
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>


        <p class="mb-1">
            @*<a href="forgot-password.html">I forgot my password</a>*@
        </p>
        <p class="mb-0">
            <a href="@Url.Action("Registration","Login")" class="text-center">Register a new membership</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}